        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>
  </header>
  
  <main>
  
    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-light">Let's cook some meals! </h1>
          <p class="lead text-muted">Welcome to Recipe search: An open, crowd-sourced database of Recipes from around the
            world.
          </p>
   
          <!-- <!- Form for searching by ingredient -->
  
          <form id="getRecipeform" action="/get-recipe" method="post">
            <div class="col-md">
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="recipeInput" name="ingredient" required
                  placeholder="e.g., Chicken">
                <button class="btn btn-secondary" id="recipeSubmit" type="submit">Search by Ingredient</button>
              </div>
            </div>
          </form>
  
          <!-- Form for searching by name -->
          <form id="nameForm" action="/search-by-name" method="get">
            <div class="col-md">
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="nameInput" name="name" placeholder="e.g., Arrabiata">
                <button class="btn btn-primary" id="nameSubmit" type="submit">Search by Name</button>
              </div>
            </div>
          </form>
  
          <!-- Form for filtering by category -->
          <form id="categoryForm" action="/filter-by-category" method="get">
            <div class="col-md">
              <div class="input-group mb-2">
                <input type="text" class="form-control" id="categoryInput" name="category" placeholder="e.g., Seafood"
                  aria-describedby="button-addon2">
                <button class="btn btn-secondary" id="categorySubmit" type="submit">Search by Category</button>
              </div>
            </div>
          </form>  
  
    </section>
  
    <div class="album py-5 bg-light">
      <div class="container">
        <h2>Recipes</h2>
        <% if (content && content.meals && content.meals.length > 0) { %>
          <div class="recipe-list">
            <% content.meals.forEach((meal, index) => { %>
              <% if (index % 3 === 0) { %>
                <!-- Start a new row before the first item and every three items -->
                <div class="recipe-row">
              <% } %>
              
              <div class="recipe-item">
                <img src="<%= meal.strMealThumb %>/preview" alt="<%= meal.strMeal %>">
                <a href="/recipe-details/<%= meal.idMeal %>">
                  <p><%= meal.strMeal %></p>
                </a>
              </div>
        
              <% if ((index + 1) % 3 === 0 || (index + 1) === content.meals.length) { %>
                <!-- Close the row after every three items or at the end of the list -->
                </div>
              <% } %>
            <% }); %>
          </div>
        <% } else { %>
          <p></p>
        <% } %>
      </div>
    </div>
  
    </body>
</html>      


      




  



    

